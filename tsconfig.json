{
  "compilerOptions": {
    "target": "ES2020",                      // Target modern JavaScript
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],  // Include necessary libraries
    "module": "ESNext",                       // Use the latest module system
    "skipLibCheck": true,                     // Skip type-checking of declaration files
    "moduleResolution": "bundler",            // Use bundler-compatible module resolution
    "resolveJsonModule": true,                // Allow importing JSON files
    "isolatedModules": true,                  // Allow isolated modules
    "emitDeclarationOnly": true,              // Emit declaration files only
    "allowImportingTsExtensions": true,       // Allow importing `.ts` files from `.js`
    "jsx": "react",                           // Use React JSX
    "allowJs": true,                          // Allow JavaScript files
    "strict": true,                           // Enable strict mode for TypeScript
    "noUnusedLocals": true,                   // Check for unused variables
    "noUnusedParameters": true,               // Check for unused function parameters
    "noFallthroughCasesInSwitch": true,       // Prevent fallthrough in switch cases
    "outDir": "./dist",                       // Output directory for the compiled files
    "declaration": true,                      // Generate declaration files
    "declarationDir": "./dist",               // Output directory for the declaration files
    "sourceMap": true                         // Generate source maps for debugging
  },
  "include": ["src"],                         // Include the source directory
  "exclude": ["node_modules"]                 // Exclude node_modules directory
}
